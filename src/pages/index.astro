---
import { SEO } from 'astro-seo';
import { TITLE, DESCRIPTION, sosialLink } from '../data/main';

// image imports
import metaImage from '../assets/meta-image.png';
import icon from '../assets/icon.svg';
import { Image } from 'astro:assets';

// copyright year
const date = new Date();

// font import
import '../assets/css/main.css';
import ListLink from '../components/ListLink.astro';
---

<!doctype html>
<html lang="id">
  <head>
    <SEO
      title={TITLE}
      description={DESCRIPTION}
      openGraph={{
        basic: {
          title: `${TITLE}`,
          type: 'Single Page',
          image: `${metaImage.src}`,
        },
        article: {
          authors: ['dai re'],
          tags: ['sosial link', 'dai re'],
        },
      }}
      twitter={{
        title: `${TITLE}`,
        description: `${DESCRIPTION}`,
        creator: '@03ii00',
        card: 'summary_large_image',
        image: `${metaImage.src}`,
      }}
      ,
      extend={{
        link: [{ rel: 'icon', href: '/favicon.svg' }],
      }}
    />
    <meta
      http-equiv="Content-Type"
      content="text/html;charset=UTF-8"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
  </head>
  <body class="flex min-h-screen flex-col justify-between">
    <nav class="flex items-center gap-1">
      <Image
        src={icon}
        alt="icon"
        width={50}
      />
      <h2 class="text-2xl font-semibold">{TITLE}</h2>
    </nav>
    <main class="">
      <ul class="flex flex-col gap-3">
        {
          sosialLink.map((sosialLink) => (
            <ListLink
              link={sosialLink.url}
              icon={sosialLink.icon}
              alt={sosialLink.name}
            />
          ))
        }
      </ul>
    </main>
    <footer class="flex justify-center">
      <p>
        &copy; {date.getFullYear()}
        <a
          class="text-blue-600 underline"
          href="https://dairew.my.id"
          >dai</a
        >
      </p>
    </footer>
  </body>
</html>
